{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "orders-route": {
        "ClusterId": "order-service",
        "Match": {
          "Path": "/orders/{**catch-all}"
        }
      },
      "order-health": {
        "ClusterId": "order-service",
        "Match": {
          "Path": "/health/order"
        },
        "Transforms": [
          {
            "PathSet": "/health"
          }
        ]
      },
      "stock-route": {
        "ClusterId": "stock-service",
        "Match": {
          "Path": "/stock/{**catch-all}"
        }
      },
      "product-route": {
        "ClusterId": "product-service",
        "Match": {
          "Path": "/products/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "order-service": {
        "Destinations": {
          "order": {
            "Address": "http://order-service:8080"
          }
        }
      },
      "stock-service": {
        "Destinations": {
          "stock": {
            "Address": "http://stock-service:8080"
          }
        }
      },
      "product-service": {
        "Destinations": {
          "product": {
            "Address": "http://product-service:8080"
          }
        }
      }
    }
  }
}
